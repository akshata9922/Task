<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:id="@+id/txtsceduleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Name :"/>

    <TextView
        android:layout_below="@+id/txtsceduleName"
        android:textStyle="bold"
        android:id="@+id/txtroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room :"/>
    <TextView
        android:layout_below="@+id/txtroom"
        android:textStyle="bold"
        android:id="@+id/txtappliance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appliance :"/>


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtappliance"
        android:layout_alignParentStart="true"
        android:text="Time :"
        android:textStyle="bold" />



</RelativeLayout>